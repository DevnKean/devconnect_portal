{% extends "ThemeBundle:layout:base-layout.html.twig" %}

{% block page_title %}Contract{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    {% form_theme form 'jquery.collection.html.twig' 'contract-service-theme.html.twig' %}
    <div class="row">
        <div class="col-sm-8">
            <div class="box box-success">
                <!-- form start -->
                {{ form_start(form) }}
                <div class="box-body">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.supplier) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.status) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.file) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.paymentTerm) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.sentAt) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.receivedAt) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.startDate) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.endDate) }}
                            </div>
                        </div>

                        {{ form_widget(form) }}
                    </div>

                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_inline %}
    {{ parent() }}

    <script type="text/javascript">
        $('.service-collection').collection({
            add: '<button type="button" class="btn btn-success">Add another commission model</button>',
            allow_add: true,
            allow_remove: true,
            allow_up: false,
            allow_down: false,
            min: 1,
            add_at_the_end: true,
        })
    </script>
{% endblock %}
