{% extends "ThemeBundle:layout:base-layout.html.twig" %}

{% block page_title %}Edit Contract{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-success">
                <!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form) }}
                <div class="box-body">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.supplier) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.status) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.file) }}
                                
                                {# <div class="col-sm-6"> #}
                                    {# {% if contract.file %} #}
                                        {# {{ form_row(form.file) }}
                                        <button class="edit">Edit</button>
                                        <button class="delete">Delete</button> #}
                                    {# {% endif %}                                     #}
                                {# </div> #}
                            </div>
                                              
                            <div class="col-sm-6">
                                {{ form_row(form.paymentTerm) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.sentAt) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.receivedAt) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.startDate) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.endDate) }}
                            </div>
                        </div>
                        {{ form_widget(form) }}
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">Update</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}
