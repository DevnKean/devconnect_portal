{% extends "ThemeBundle:layout:base-layout.html.twig" %}

{% block page_title %}Lost Leads{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-success">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped dataTable">
                        <thead>
                        <tr>
                            <th>UNIQUE ID</th>
                            <th>Business Name</th>
                            <th>Contact Name</th>
                            <th>Contact Email</th>
                            <th>Contact Phone</th>
                            <th>Lead Notes</th>
                            <th>Service</th>
                            <th>Status</th>
                            <th>Logged At</th>
                            <th>Expired At</th>
                            <th>Time Frame (days)</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for lead in leads %}
                            <tr>
                                <td>{{ lead.uniqueID }}</td>
                                <td>{{ lead.businessName}}</td>
                                <td>{{ lead.contactName }}</td>
                                <td>{{ lead.contactEmail }}</td>
                                <td>{{ lead.contactPhone }}</td>
                                <td>
                                    {% for leadNote in lead.leadNotes %}
                                        <p>{{ leadNote.note }} @ {{ leadNote.createdAt | date('d M Y H:i:s') }}</p>
                                    {% endfor %}
                                </td>
                                <td>{{ lead.service }}</td>
                                <td>{{ lead.status }}</td>
                                <td>{{ lead.createdAt|date('d M Y H:i:s') }}</td>
                                <td>{{ lead.updatedAt|date('d M Y H:i:s') }}
                                <td>{{ lead.timeFrame }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
{% endblock %}
