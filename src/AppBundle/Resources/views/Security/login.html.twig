{% extends 'ThemeBundle:layout:login-layout.html.twig' %}

{% block page_content %}
    <div class="login-box">
        <div class="login-logo">
            <img src="{{ asset('bundles/theme/img/logo.png') }}" width="200"/>
        </div>
        {% if error %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-ban"></i> Error!</h4>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="{{ path('login') }}" method="post">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Username/Email" id="username" name="_username" value="{{ lastUsername }}">
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" id="password" name="_password" >
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <a href="{{ path('reset_password') }}">I forgot my password</a><br>
        </div>
        <!-- /.login-box-body -->
    </div>
{% endblock %}
