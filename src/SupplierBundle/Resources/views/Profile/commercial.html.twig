{% extends "ThemeBundle:layout:base-layout.html.twig" %}

{% block page_title %}Commercials{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-sm-10">
            {% include '@Supplier/Profile/notification.html.twig' %}
            {% include '@Supplier/Profile/feedback.html.twig' %}
            <div class="box box-success">
                <div class="box-header with-border">
                    <div class="box-title">
                        <p>Please provide an indication of the commercial models you are comfortable in offering as part of your proposals to clients.</p>
                        <p>Please note you will only be sent leads that are compatible with your preferences.</p>
                        <p>Remember its still up to you what you ultimately propose! </p>
                    </div>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                {{ form_start(form, {'attr': {'class': 'dirty-check'}}) }}
                <div class="box-body">
                    {{ form_widget(form) }}
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-success" disabled>Save</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}