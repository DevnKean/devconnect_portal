{% extends "ThemeBundle:layout:base-layout.html.twig" %}

{% block page_title %}Users{% endblock %}

{% block page_subtitle %}<a href="{{ path('supplier_users_create') }}" class="btn btn-success btn-md">Create User</a>{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Users</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped dataTable">
                        <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Job Title</th>
                            <th>Supplier</th>
                            <th>Created Date</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            {% if not user.isAdmin %}
                                <tr>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.lastName }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email}}</td>
                                    <td>{{ user.jobTitle }}</td>
                                    <td>{{ user.supplier }}</td>
                                    <td>{{ user.createdAt|date }}</td>
                                    <td>
                                        <a class="btn bg-purple btn-xs" href="{{ path('supplier_users_edit', {'id': user.id}) }}"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger btn-xs" onclick="return confirm('Are you sure to delete this user (id: {{ user.username }}) ? ');" href="{{ path('supplier_users_delete', {'id': user.id}) }}"><i class="fa fa-trash"></i></a></td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
{% endblock %}